{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/ts-build",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "reactNamespace": "JSX",
    "types": [
      "react",
      "react-redux"
    ]
  },
  "exclude":[
    "node_modules"
  ],
  "files": [
    "./src/index.ts",
    "./src/renderers/materialized/index.ts"
  ]
}
