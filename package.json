{
  "name": "jsonforms-monorepo",
  "scripts": {
    "lerna": "lerna",
    "preparePublish": "git clean -dfx && npm ci && npm run init && npm run clean && npm run build && npm run bundle && npm run test",
    "merge-report": "mkdir -p coverage && lcov-result-merger 'packages/**/coverage/lcov.info' 'coverage/lcov.info'",
    "check-format": "echo 'temporarily disabled'",
    "init": "lerna bootstrap --hoist",
    "build": "lerna run build && lerna run doc",
    "bundle": "lerna run bundle",
    "clean": "lerna run clean",
    "test": "lerna run test",
    "test-cov": "lerna run test-cov",
    "lint": "tslint 'packages/**/*.{ts,tsx}' -c ./tslint.json"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "0.1.3",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "ajv": "^6.10.2",
    "ava": "~2.4.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.2",
    "css-loader": "^3.2.0",
    "lcov-result-merger": "^3.1.0",
    "lerna": "^3.19.0",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "source-map-loader": "^0.2.4",
    "source-map-support": "0.5.16",
    "style-loader": "^1.0.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.3",
    "tslint": "^5.20.1",
    "tslint-loader": "^3.5.4",
    "tslint-react": "^4.1.0",
    "typedoc": "^0.15.3",
    "typescript": "3.8.3",
    "webpack": "^4.41.2",
    "webpack-merge": "^4.2.2"
  }
}
