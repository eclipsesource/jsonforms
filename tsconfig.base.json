{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "ES2016",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "types": [
    "jest"
  ]
}